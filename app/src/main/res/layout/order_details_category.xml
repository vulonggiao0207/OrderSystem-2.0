<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
    tools:context="com.giao.OrderSystem.Setting"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#b1cef4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:textColor="#ffffff"
            android:background="?android:attr/selectableItemBackground"
            android:text="Back"
            android:id="@+id/homeButton"
            android:layout_weight="10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:id="@+id/textViewtemp"
            android:layout_weight="10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:id="@+id/textViewtemp2"
            android:layout_weight="10"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="Dish Category"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#b1cef4"
        android:background="#ffffff"
        android:id="@+id/tableNameTextView"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        >
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Search dish..."
            android:background="#e9e7e7"
            android:id="@+id/dishNameAutoTextView"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:layout_weight="3"/>

    </LinearLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dishCategoryListView"
        android:background="#ffffff"
        android:isScrollContainer="false"
        android:dividerHeight="1dp"
        android:divider="#868484"
        android:layout_weight="100" />

</LinearLayout>