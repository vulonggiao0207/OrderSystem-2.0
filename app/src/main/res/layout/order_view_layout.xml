<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="85"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/orderDetailIDTextView" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/dishIDTextView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantityTextView"
        android:layout_toLeftOf="@+id/dishNameTextView"
        android:singleLine="true"
        android:textColor="#000000"
        android:inputType="text"
        android:layout_weight="10"
        android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dishNameTextView"
            android:singleLine="true"
            android:textColor="#000000"
            android:layout_weight="70"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subtotalTextView"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/OrderViewDeleteButton"
            android:textColor="#000000"
            android:layout_weight="10"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/OrderViewDeleteButton"
            android:layout_weight="10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noteTextView"
            android:inputType="textMultiLine"
            android:textColor="#FF0000"
            android:paddingLeft="10dp"/>
    </LinearLayout>
</LinearLayout>