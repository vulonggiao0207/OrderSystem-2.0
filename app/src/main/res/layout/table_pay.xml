 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="0dp"
        tools:context="com.giao.OrderSystem.Setting"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:background="#b1cef4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:textColor="#ffffff"
                android:background="?android:attr/selectableItemBackground"
                android:text="Back"
                android:id="@+id/homeButton"
                android:layout_weight="10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textColor="#ffffff"
                android:id="@+id/textViewtemp"
                android:layout_weight="10"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:textColor="#ffffff"
                android:background="?android:attr/selectableItemBackground"
                android:text="Pay"
                android:id="@+id/saveButton"
                android:layout_weight="10"/>
        </LinearLayout>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="45dip"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textAlignment="center"
         android:text="Pay Table"
         android:textStyle="bold"
         android:textSize="32sp"
         android:textColor="#b1cef4"
         android:id="@+id/textView"
         android:background="#ffffff"
         android:layout_weight="10"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:padding="10dp">
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Table: "
                        android:id="@+id/textView7"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/tableNameTextView"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="85"/>
                </TableRow>
                <TableRow android:paddingTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Total: "
                        android:id="@+id/textView9"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/totalTextView"
                        android:layout_marginLeft="10dp"
                        android:text="0.0"
                        android:layout_weight="85"/>

                </TableRow>
                <TableRow android:paddingTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Pay: "
                        android:id="@+id/textView10"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/paidTextView"
                        android:layout_marginLeft="10dp"
                        android:text="0.0"
                        android:layout_weight="85"/>

                </TableRow>
                <TableRow android:paddingTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Remaining: "
                        android:id="@+id/textView11"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/remainingTextView"
                        android:layout_marginLeft="10dp"
                        android:text="0.0"
                        android:layout_weight="85"/>
                </TableRow>
                <TableRow android:paddingTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Refund: "
                        android:id="@+id/textView13"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/refundTextView"
                        android:layout_marginLeft="10dp"
                        android:text="0.0"
                        android:layout_weight="85"/>
                </TableRow>
                <TableRow android:paddingTop="10dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/payEditText"
                        android:layout_column="1"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>